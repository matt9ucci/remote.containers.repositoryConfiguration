{
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/cxxmatrix",
			"args": [
				"The Matrix",
				"Reloaded",
			],
			"cwd": "${fileDirname}",
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true,
				},
			],
			"preLaunchTask": "build: debug",
		},
	],
}